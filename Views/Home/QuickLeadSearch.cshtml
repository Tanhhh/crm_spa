<div style="z-index: 1030; height: 110%; padding-left: 0px;" id="ContentQuickLeadSearch" class="modal fade ContentQuickLeadSearch" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">

</div>

<script>
    $(document).ready(function () {
        $('#btnquickleadsearch').click(function () {
            var searchValue = $('#inpquickleadsearch').val();
            if (searchValue) {
                DetailLeadQuickSearch(searchValue);
            }
            else {
                toastr.warning('Hãy nhập tên hoặc sđt Lead để tìm kiếm!');
            }
            
        });

    })
    $("#ContentQuickLeadSearch").on("hidden.bs.modal", function () {
        $("#ContentQuickLeadSearch").empty();
        $(".modal - backdrop.in").css({
            display: none,
        });
    });
    $("#inpquickleadsearch").on("keypress", function (event) {
        if (event.which == 13) {
            $('#btnquickleadsearch').click();
        }
    });
    function DetailLeadQuickSearch(Search) {
        ShowLoading();
        $.ajax({
            url: "/AdviseCard/QuickSearchLeadModal?Search=" + Search,
            method: "get",
            dataType: "html",
            success: function (data) {
                if (data.trim() !== '') {
                    // If the returned data is not empty, update the content and show the modal
                    $("#ContentQuickLeadSearch").html(data);
                    $('#ContentQuickLeadSearch').modal('show');
                } else {
                    // If the returned data is empty, handle the error
                    toastr.warning('Không tìm thấy Lead phù hợp');
                    // Optionally, display an error message to the user
                }
            },
            complete: function () {
                HideLoading();
            }
        })
        
    }
</script>
