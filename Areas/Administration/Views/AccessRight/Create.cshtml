@section Scripts {
    <script type="text/javascript">
        $(function () {
            $(".btn-group").click(function () {
                var id = $(this).data("controller");
                var on = $(this).hasClass("on");
                if (on) {
                    $(".item_of_" + id).hide();
                    $(this).removeClass("on");
                    $(this).removeClass("fa-minus-square-o");
                    $(this).addClass("fa-plus-square-o");
                }
                else {
                    $(".item_of_" + id).show();
                    $(this).addClass("on");
                    $(this).removeClass("fa-plus-square-o");
                    $(this).addClass("fa-minus-square-o");
                }
            });

            $('input[type="checkbox"]').click(function () {
                if ($(this).prop("checked") == true) {
                    Save($(this).val(), false);
                }
                else if ($(this).prop("checked") == false) {
                    Save($(this).val(), true);
                }
            });

            //$('.input-edit-inline').editInlineInput({ id: null, url: '/Page/EditInline', disabled: true, dataId: 'id' });
        });

        function Save(userTypePage, isDelete) {
            //debugger;
            ShowLoading();
            var url = "/AccessRight/Save";
            $.post(url, { userTypePage: userTypePage, isDelete: isDelete }, function (res) {
                if (res != 'success') {
                    alertPopup('Lỗi!', 'Lưu thất bại!', 'error');
                }
                HideLoading();
            });
        };
    </script>
