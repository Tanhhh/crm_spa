    function DrawBarChart(i, data, labels, backgroundColor, extraid) {
        const ctx = document.getElementById(i);
        let datasets = [];
        for (let i = 0; i < data.length; i++) {
            let obj = {
                label: data[i].key.Name,
                data: data[i].SL,
