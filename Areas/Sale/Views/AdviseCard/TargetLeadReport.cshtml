            $.ajax({
                url: "/AdviseCard/GetTargetLeadReport",
                data: { idBranch: idbranch, CountForBrand: brandcustomerPurchaseModal, nam: nam, thang: thang },
                method: 'get',
                dataType: 'json',
                success: function (data) {
                    debugger
                    let trs = ''
                    data.forEach(x => {
                        let TypeForecast = TFToContent(x.TypeForecast)
                        trs += `<tr><td>Dự báo doanh số ${TypeForecast.title}</td>
                            <td style='display:flex;margin-left:${(x.TypeForecast - 1) * 100}px;'>${TFToPointer(x.TypeForecast)}${TFToPointer(x.mNext)}${TFToPointer(x.mNextNext)}
            <td style='text-align:right'>${BigInt(convert(x.TotalMoney)).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' })}</td>
                            <td style='text-align:right'>${x.TLTarget}%</td></tr>`
                    })
                    $('#tblBarChart tbody').html(trs)
                    $('#tblBarChart').show()
                    HideLoading();
                },
                error: function () {
                    HideLoading();
                    alert("Lỗi.\nKhông thể lấy dữ liệu báo cáo (1).");
                }
            });
        });
        $(function () {
