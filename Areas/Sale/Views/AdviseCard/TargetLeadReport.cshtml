    var lastDayOfLastMonth = firstDayOfLastMonth.AddMonths(1).AddDays(-1);

    //Quý này
    var firstDayOfQuarter = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
    var lastDayOfQuarter = firstDayOfQuarter.AddMonths(3).AddDays(-1);


