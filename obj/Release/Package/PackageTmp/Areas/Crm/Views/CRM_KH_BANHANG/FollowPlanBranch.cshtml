<div class="table-responsive" id="cTable">
    <table id="" class="table table-bordered">
        <thead>
            <tr>
                <td>Chi nhánh</td>
                @foreach (var item in Level)
                {
                    <td>@item.Name</td>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var useritem in user)
            {


                <tr>
                    <td>@GridColumnName(useritem.Name, useritem.Id, month, year)</td>
                    @foreach (var item in Level)
                {
                    var real = Model.Where(x => x.LevelName == item.Name && x.UserId == useritem.Id).FirstOrDefault();

                    if (real != null && real.Target == 1)
                    {
                            <td style="background-color:orangered">@real.Value</td>
                        }
                        else if (real != null && real.Target == 0)
                        {
                            <td style="background-color:greenyellow">@real.Value</td>
                        }
                        else
                        {
                            <td style="background-color:white">-</td>
                        }

                    }
                </tr>
            }
        </tbody>
    </table>
</div>

