<div id="page_header" class="widget-box">
    <div class="widget-header">
        <h5 class="widget-title">
            <i class="ace-icon fa fa-star orange"></i>
            @ViewBag.Title
        </h5>
        <div class="widget-toolbar">
            <a class="btn-search" href="#" data-action="collapse">
                <i class="ace-icon fa fa-search blue"></i>
            </a>
            <a class="btn-setting"></a>
        </div>
    </div>

    <div class="widget-body" style="display: block;">
        <div class="widget-main">
            <div class="search-view form-inline" id="SaleReport">
                <p>
                    <select id="week" name="week">
                        <option>Chọn tuần</option>
                        @for (int i = 1; i <= 4; i++)
                        {
                            <option @(Request["week"] == i.ToString() ? "Selected" : "") value="@i">Tuần @i</option>
                        }
                    </select>
                    <select id="month" name="month">
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option @(Month == i.ToString() ? "Selected" : "") value="@i">Tháng @i</option>
                        }
                    </select>
                    <select id="year" name="year">
                        @for (int i = 2016; i <= (DateTime.Now.Year + 1); i++)
                        {
                            <option @(Year == i.ToString() ? "Selected" : "") value="@i">Năm @i</option>
                        }
                    </select>

                    <select class="chzn-select" style="width:250px; float:left" id="ManagerStaffId">
                        <option value="">- Nhân viên QL -</option>
                        @foreach (var item in SelectListHelper.GetSelectList_FullUserNameKD(null, null))
                        {
                            <option @(Request["ManagerStaffId"] == item.Value ? "Selected" : "") value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <select class="chzn-select" style="width:250px; float:left" id="NK">
                        <option value="">- Nguồn Khách -</option>
                        @foreach (var item in SelectListHelper.GetSelectList_AllNguonKhach(null, null))
                        {
                            <option @(Request["NK"] == item.Value ? "Selected" : "") value="@item.Value">@item.Text</option>
                        }
                    </select>
                </p>
                <p style="margin:0px;">
                    <button class="btn btn-mini btn-primary" name="search" onclick="searchreact()" type="submit" value="Search">
                        Xem báo cáo
                    </button>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row" style="padding-top: 5px;">
