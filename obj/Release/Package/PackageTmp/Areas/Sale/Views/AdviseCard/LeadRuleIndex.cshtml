<script>

    function searchPanel(Name,Id, Iddt, a, b, c, d,e) { //work.StatusTo,work.ContentEmail`,work.ContentRule`,work.TileEmail,TypeRuleId
        debugger
        $.ajax({
            url: "/AdviseCard/LeadRuleModal",
            method: "get",
            async: false,
            dataType: "html",
            success: function (data) {
                $("#searchPanelContent").html(data)
                $("input[name=StatusFrom]").val(Id)
                $("#StatusFromCurr").text(Name)
                f5fieldRule()
                if (Iddt > 0) {
                    $("select[name=StatusTo]").val(a)
                    $("select[name=StatusTo]").change()
                    $("select[name=TypeRuleId]").val(e)
                    $("select[name=TypeRuleId]").change()
                    if ($("#cttemplate").find(`option[value='${c}']`).length > 0) {
                        $("#cttemplate").val(c)
                        $("#cttemplate").change()
                    } else {
                        $("#cttemplate").change()
                        $('textarea[name=ContentRule]').val(c)
                    }
                    if ($("select[name=TileEmail]").find(`option[value='${b}']`).length > 0) {
                        $("select[name=TileEmail]").val(b)
                        $("select[name=TileEmail]").change()
                    } else {
                        $("select[name=TileEmail]").change()
                        $('textarea[name=ContentEmail]').val(b)
                        CKEDITOR.instances['ContentEmail'].setData(b)
                    }
                    e == 1 || e==4 ? smsshow() : e == 2 ? mailshow() : statusshow()
                }
                $("input[name=Id]").val(Iddt)
                f5RuleDetail(Iddt)
            }
        })
    }
    function f5fieldRule() {
        $("select[name=StatusTo]").val('')
        $("select[name=StatusTo]").change()
        $("select[name=TypeRuleId]").val(3)
        $("textarea[name=ContentEmail]").val('')
        CKEDITOR.instances['ContentEmail'].setData('')
        $("textarea[name=ContentRule]").val('')
        $("#cttemplate").val('')
        $("#cttemplate").change()
        $("select[name=TileEmail]").val('')
        $("select[name=TileEmail]").change()
    }
    $(function () {
        $('#btnSearchLead,#btnEditLeadRule').click(function () {
            debugger
            $(this).is('#btnSearchLead') ? $("input[name='ruleDetails.Id']").val('') : ''
            if ($("input[name=Id]").val() == '' && !($('select[name="ruleDetails.FieldName"]').val() != '' && $('select[name="ruleDetails.Logic"]').val() != '' && $('input[name="ruleDetails.ContentRule"]').val() != '')) {
                toastr.warning('Vui lòng nhập điều kiện')
                $('select[name="ruleDetails.FieldName"]').focus()
                return
            }
            SaveLeadRule(this)
        })
        $('#btnCancelEdit').click(function () {
            $('#btnCancelEdit,#btnEditLeadRule').hide()
            $('#btnCloseSearch,#btnSearchLead').show()
        })
    })
    function SaveLeadRule(i) {
        if ($('select[name="ruleDetails.FieldName"]').val() != '' && $('select[name="ruleDetails.Logic"]').val() != '' && $('input[name="ruleDetails.ContentRule"]').val() != '' && $('#AndOr').val() == ''
            && $("#tblRuleDetail tbody tr td:first-child").text()!='') {
            toastr.warning('Vui lòng nhập AndOr')
            $('#AndOr')[0].focus()
            return
        }
        debugger
        if ($('select[name="ruleDetails.FieldName"]').val() != '' && $('select[name="ruleDetails.Logic"]').val() != '' && $('input[name="ruleDetails.ContentRule"]').val() != '' 
            && $("#tblRuleDetail tbody tr td:first-child").text() != '') {
            let dkn = $('select[name="ruleDetails.FieldName"] option:selected').text() + $('select[name="ruleDetails.Logic"] option:selected').text() + $('input[name="ruleDetails.ContentRule"]').val()
            let dkn1 = $('select[name="ruleDetails.FieldName"] option:selected').text() + $('select[name="ruleDetails.Logic"] option:selected').text() + $('#CodeList option:selected').text()
            if ($(`#tblRuleDetail tbody tr td:nth-child(2):contains(${dkn})`).length>0 || ($('#CodeList').val() != '' && $('#CodeList').val() != undefined && $('#CodeList').val() != null && $(`#tblRuleDetail tbody tr td:nth-child(2):contains(${dkn1})`).length>0)) {
                toastr.warning('Điều kiện đã tồn tại')
                return
            }
        }
        $('textarea[name=ContentEmail]').val(CKEDITOR.instances['ContentEmail'].getData())
        let form = new FormData($(i)[0].form)
        $.ajax({
            url: $(i)[0].form.action,
            method: $(i)[0].form.method,
            data: form,
            processData: false,
            contentType: false,
            dataType: "json",
            success: function (data) {
                if (data > 0) {
                    toastr.success('Lưu thành công')
                    $("input[name=Id]").val(data)
                    f5RuleDetail(data)
                    $(i).is('#btnEditLeadRule') ? addTrigger() : ''
                } else {
                    toastr.warning('Lưu thất bại')
                }
            }
        })
    }
    function f5RuleDetail(Id) {
        $.ajax({
            url: "/AdviseCard/f5RuleDetail?id=" + Id,
            method: "get",
            dataType: "json",
            success: function (data) {
                let html = ''
                $.each(data, function (index, item) {
                    html += `<tr><td>${index + 1}</td><td>${(item.LabelName + item.Logic + item.ContentRuleName)}</td><td>${item.StatusToName != null ? item.StatusToName:''}</td><td>${(item.AndOr == '1' ? 'And' : item.AndOr == '0' ? 'Or' : '')}</td>
                    <td><button title='chỉnh sửa' type='button' onclick='editRuleDetail(${item.Id},"${item.FieldName}","${item.Logic}","${item.ContentRule}","${item.AndOr}")' style='border: unset; background: #fff; vertical-align: middle;'><i  class='fa fa-edit'></i></button>
                    <button title='xóa' type='button' onclick='deleteRuleDetail(${item.Id})' style='background: #fff;border: unset;vertical-align: middle;'><i  class='fa fa-trash'></i></button></td></tr>`
                })
                $("#tblRuleDetail tbody").html(html)
                f5leadRuleBody()
                debugger
                let mem = data.length
                if (mem > 0) {
                    $('#AndOr').attr('disabled', false)
                } else {
                    $('#AndOr').val('')
                    $('#AndOr').attr('disabled', true)
                }
            }
        })
    }
    function editTrigger() {
        $('#btnCloseSearch,#btnSearchLead').hide()
        $('#btnCancelEdit,#btnEditLeadRule').show()
    }
    function addTrigger() {
        $('#btnCloseSearch,#btnSearchLead').show()
        $('#btnCancelEdit,#btnEditLeadRule').hide()
    }
    function editRuleDetail(id, fieldName, logic, contentRule, AndOr) {
        debugger
        $("input[name='ruleDetails.Id']").val(id)
        $('#SearchLeadForm select[name="ruleDetails.FieldName"]').val(fieldName)
        $('#SearchLeadForm select[name="ruleDetails.FieldName"]').change()
        $('#SearchLeadForm select[name="ruleDetails.Logic"]').val(logic)
        $('#SearchLeadForm input[name="ruleDetails.ContentRule"]').val(contentRule)
        $('#SearchLeadForm select[name="ruleDetails.AndOr"]').val(AndOr)
        if ($('#SearchLeadForm input[name="ruleDetails.ContentRule"]').css('display')=="none") {
            $('#CodeList').val(contentRule)
            $('#CodeList').change()
        }

        editTrigger()

    }
    function deleteRuleDetail(id) {
        $.ajax({
            url: '/AdviseCard/deleteRuleDetail',
            method: 'post',
            data: { id },
            dataType: "json",
            success: function (data) {
                if (data > 0) {
                    toastr.success('Xóa thành công')
                    f5RuleDetail(data)

                } else {
                    toastr.warning('Xóa thất bại')
                }
            }
        })
    }
    function f5leadRuleBody() {
        $.ajax({
            url: "/AdviseCard/LeadRulePartial",
            method: "get",
            dataType: "html",
            success: function (data) {

                $("#leadRuleBody").html(data)
            }
        })
    }
    function deleteLeadRule(Id) {
        $('#idDel').val(Id)
        $('.bs-delete-modal-sm').modal('show')
      
    }
    function DelAccept() {
        let Id = $('#idDel').val()
        $.ajax({
            url: "/AdviseCard/deleteLeadRule",
            method: "post",
            data: { Id },
            dataType: "json",
            success: function (data) {
                f5leadRuleBody()
                $('.bs-delete-modal-sm').modal('hide')
            }
        })
    }
</script>
