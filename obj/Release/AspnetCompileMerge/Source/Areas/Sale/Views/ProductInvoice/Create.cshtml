                Discount_DB = (isNaN(parseFloat($('#Discount_DB').val())) ? 0 : parseFloat($('#Discount_DB').val()));

                var totalDiscount = 0;
                totalDiscount = (parseFloat(Discount_KM) + parseFloat(Discount_VIP) + parseFloat(Discount_DB) + parseFloat(PlusPoint));

                totalDiscount = parseFloat(totalDiscount);
                //$('#Total_Discount').val(totalDiscount);
                $('#Total_Discount').val(totalDiscount);
                var total = 0;
                total += parseFloat(removeComma($('#TotalAmount').val()));
                var vat = parseFloat(removeComma($('#TaxFee').val()));
                var totalVAT = (total + total * vat / 100) * ((100 - totalDiscount) / 100);
                $('#mask-TongTienSauVAT').val(numeral(totalVAT).format('0,0'));
                $('#TongTienSauVAT').val(numeral(totalVAT).format('0,0'));
