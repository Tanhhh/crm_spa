        $(function () {
            $('#Total_Discount').attr("disabled", "disabled");
            $('#PlusPoint').attr("disabled", "disabled");

            $("#Total_Discount").val($('#PlusPoint').val());
            var Discount_KM = 0;
            var Discount_VIP = 0;
            var Discount_DB = 0;
            var PlusPoin = 0;
            $(window).click(function (event) {
                Discount_KM = (isNaN(parseFloat($('#Discount_KM').val())) ? 0 : parseFloat($('#Discount_KM').val()));
